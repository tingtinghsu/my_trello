<div class="flex my-2">
  <% @lists.each do |list| %>
    <div class="bg-gray-200 mx-2 w-64 rounded-md">
      <tr>
        <h2 class="px-3 py-1 font-bold"><%= list.name %></h2>
        <div class="mx-3">
          <td><%= list.position %></td>
          <td><%= link_to '新增', list %></td>
          <td><%= link_to '修改', edit_list_path(list) %></td>
          <td><%= link_to '刪除', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    </div>
  <% end %>
</div>


<br>

